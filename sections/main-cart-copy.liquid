{{ 'cart.css' | asset_url | stylesheet_tag }}

<div class="container bg-1">
  {% form 'cart', cart %}
    <h1 class=" h1 color-main section__heading text-center">Your Cart</h1>
    <div class="row">
      <div class="col d-flex row-gap-30 flex-d-column" style="--w-xs: 12; --w-md: 8">
        <div class="row">
          <div class="col cart__title text-light" style="--w-md: 6">Product</div>
          <div class="col cart__title text-light" style="--w-md: 3">Quantity</div>
          <div class="col cart__title text-light" style="--w-md: 3">Total</div>
        </div>
        {% for item in cart.items %}
          <div class="row">
            <div class="col" style="--w-md: 6">
              <div class="cart__item d-flex">
                <div class="cart__media">
                  <img
                    src="{{ item.image | img_url: '500x' }}"
                    alt=""
                    class="cart__product-img"
                  >
                </div>
                <div class="cart__content">
                  <p class="cart__shop-name text-light">{{ shop.name }}</p>
                  <h2 class="cart__product-title color-main">{{ item.title }}</h2>
                </div>
              </div>
            </div>
            <div class="col" style="--w-md: 3">
              <input
                class="cart__input w-100"
                name="updates[]"
                value="{{ item.quantity }}"
              >
              <a href="{{ item.url_to_remove }}" class=" cart__remove btn">Remove</a>
            </div>
            <div class="col" style="--w-md: 3">
              <span class="cart__product-price text-light d-block">
                {{- item.final_line_price | money_without_trailing_zeros -}}
              </span>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="col" style="--w-md: 4; --w-xs: 12">
        <p class="cart__total text-light">Total: {{ cart.total_price | money_without_trailing_zeros }}</p>
        <button
          class="cart__btn  btn btn--shop-now "
          type="submit"
          name="update"
        >
          update
        </button>
        <button
          class="cart__btn btn btn--shop-now "
          type="submit"
          name="checkout"
        >
          Checkout
        </button>
        <a href="{{ shop.url }}" class=" color-main heading-2-sm d-block cart__continue">Continue Shoping</a>
      </div>
    </div>
  {% endform %}
</div>
