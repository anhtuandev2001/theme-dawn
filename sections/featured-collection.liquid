{{ 'featured-collection.css' | asset_url | stylesheet_tag }}

<div
  class="section bg-main {{ section.settings.color_scheme }}"
  style="
    --section-padding-top: {{ section.settings.top_padding }}px;
    --section-padding-bottom: {{ section.settings.bottom_padding }}px
  "
>
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="section__heading color-text {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    {% if section.settings.heading != blank %}
      <div class="feature-collection__decription color-text {{ section.settings.description_style }}">
        {{ section.settings.decription }}
      </div>
    {% endif %}
  </div>
  <div class="{% if section.settings.product_full_width == true %} container-w-100 {% else %} container {% endif %}">
    {%- if section.settings.collection != blank -%}
      <div class="row feature-collection__list">
        {%- for product in section.settings.collection.products limit: section.settings.max_product -%}
          <div
            class="col"
            style="--w-lg: {{ 12.0 | divided_by: section.settings.columns_lg }}; {% if section.settings.colmn_xs == "one-column" %} --w-xs: 12 {% else %} --w-xs: 6 {% endif %}"
          >
            {%- render 'component-card',
              product: product,
              image_ratio: section.settings.image_ratio,
              second_img_hover: section.settings.second_img_hover,
              add_button: section.settings.add_button,
              card_color: 'color-text'
            -%}
          </div>
        {%- endfor -%}
      </div>
      {%- if section.settings.enable_view_all != blank -%}
        <div class="text-center">
          <a
            href="{{ section.settings.collection.url }}"
            class="feature-collection__btn text-btn d-inline-block color-text {{ section.settings.view_all_style }}"
            >View all</a
          >
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="row">
        {%- for i in (1..4) -%}
          {%- render 'placeholder-card', w_lg: 3, w-md: 6, class: 'color-text' -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

<script src="{{ 'feature-collection.js' | asset_url }} " defer></script>

{% schema %}
{
  "name": "Featured collection",
  "class": "Featured collection",
  "tag": "section",
  "blocks": [],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "heading",
      "default": "Featured products"
    },
    {
      "type": "select",
      "options": [
        {
          "value": "heading-2-sm heading-2-lg",
          "label": "Small"
        },
        {
          "value": "heading-1-sm heading-1-lg",
          "label": "Medium"
        },
        {
          "value": "heading-0-sm heading-0-lg",
          "label": "Large"
        }
      ],
      "label": "Heading size",
      "id": "heading_size",
      "default": "heading-1-sm heading-1-lg"
    },
    {
      "type": "richtext",
      "id": "decription",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link label"
    },
    {
      "type": "select",
      "options": [
        {
          "value": "body-1",
          "label": "Body 1"
        },
        {
          "value": "body-2",
          "label": "Body 2"
        },
        {
          "value": "caption-1",
          "label": "Caption 1"
        }
      ],
      "default": "body-1",
      "id": "description_style",
      "label": "Description style"
    },
    {
      "type": "collection",
      "label": "collection",
      "id": "collection"
    },
    {
      "type": "range",
      "label": "Maximum products to show",
      "id": "max_product",
      "max": 15,
      "min": 1,
      "step": 1,
      "default": 8
    },
    {
      "type": "range",
      "label": "Number of columns on desktop",
      "id": "columns_lg",
      "max": 5.0,
      "min": 1.0,
      "step": 1.0,
      "default": 4.0
    },
    {
      "type": "checkbox",
      "label": "Make products full width",
      "id": "product_full_width",
      "default": false
    },
    {
      "type": "checkbox",
      "label": "Enable \"View all\" if collection has more products than shown",
      "id": "enable_view_all",
      "default": false
    },
    {
      "type": "select",
      "id": "view_all_style",
      "label": "\"View all\" style",
      "options": [
        {
          "value": "view-all-link",
          "label": "link"
        },
        {
          "value": "btn-outline",
          "label": "Outline button"
        },
        {
          "value": "btn",
          "label": "Solid button"
        }
      ],
      "default": "btn-outline"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "default": "bg-1",
      "label": "Color scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "bg-1",
          "label": "Background 1"
        },
        {
          "value": "bg-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "info": "To change the card color scheme, update your theme settings."
    },
    {
      "type": "header",
      "content": "PRODUCT CARD"
    },
    {
      "type": "select",
      "label": "Image ratio",
      "id": "image_ratio",
      "default": "card-adapt",
      "options": [
        {
          "value": "card-adapt",
          "label": "Adapt to image"
        },
        {
          "value": "card-portrait",
          "label": "Portrait"
        },
        {
          "value": "card-square",
          "label": "Square"
        }
      ]
    },
    {
      "type": "checkbox",
      "label": "Show second image on hover",
      "id": "second_img_hover",
      "default": false
    },
    {
      "type": "checkbox",
      "label": "Show vendor",
      "id": "show_vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "label": "Enable quick add button",
      "id": "add_button",
      "default": false
    },
    {
      "type": "header",
      "content": "MOBILE LAYOUT"
    },
    {
      "type": "select",
      "id": "colmn_xs",
      "label": "Number of columns on mobile",
      "default": "one-column",
      "options": [
        {
          "value": "one-column",
          "label": "one column"
        },
        {
          "value": "two-column",
          "label": "two column"
        }
      ]
    },
    {
      "type": "header",
      "content": "SECTION PADDING"
    },
    {
      "type": "range",
      "label": "Top padding",
      "id": "top_padding",
      "max": 100,
      "min": 1,
      "step": 1,
      "default": 40
    },
    {
      "type": "range",
      "label": "Bottom padding",
      "id": "bottom_padding",
      "max": 100,
      "min": 1,
      "step": 1,
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Featured collection",
      "settings": {},
      "blocks": []
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header"]
  }
}
{% endschema %}
